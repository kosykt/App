<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.kostry.app.ui.viewmodel.MainViewModel" />

        <variable
            name="thirdFragment"
            type="ru.kostry.app.ui.view.ThirdFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/third_frg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.ThirdFragment">

        <TextView
            android:id="@+id/third_fragment_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/third_fragment_text"
            app:layout_constraintBottom_toTopOf="@id/btn_third_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <Button
            android:id="@+id/btn_third_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/third_fragment_button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/third_fragment_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>