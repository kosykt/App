<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.FirstFragment">

    <data>
        <variable
            name="firstFragment"
            type="ru.kostry.app.view.FirstFragment" />
        <variable
            name="viewModel"
            type="ru.kostry.app.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_frg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/first_fragment_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.myString.toString()}"
            app:layout_constraintBottom_toTopOf="@id/first_fragment_editTextNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="test text" />

        <EditText
            android:id="@+id/first_fragment_editTextNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@id/btn_first_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_fragment_message"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="123456789" />

        <Button
            android:id="@+id/btn_first_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()-> firstFragment.buttonNextOnFirstFragment()}"
            android:text="@string/first_fragment_button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_fragment_editTextNumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>